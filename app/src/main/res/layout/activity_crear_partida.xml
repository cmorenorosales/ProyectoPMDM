<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CrearPartida">

    <Button
        android:id="@+id/botonjuego1"
        android:layout_width="264dp"
        android:layout_height="111dp"
        android:layout_marginTop="88dp"
        android:text="@string/juego1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/botonjuego2"
        android:layout_width="264dp"
        android:layout_height="111dp"
        android:layout_marginTop="88dp"
        android:text="@string/juego2"
        app:layout_constraintEnd_toEndOf="@+id/botonjuego1"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="@+id/botonjuego1"
        app:layout_constraintTop_toBottomOf="@+id/botonjuego1" />

    <Button
        android:id="@+id/botonjuego3"
        android:layout_width="264dp"
        android:layout_height="111dp"
        android:text="@string/juego3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/botonjuego1"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="@+id/botonjuego1"
        app:layout_constraintTop_toBottomOf="@+id/botonjuego2"
        app:layout_constraintVertical_bias="0.428" />

</androidx.constraintlayout.widget.ConstraintLayout>